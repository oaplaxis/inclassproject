<%- include("../shared/_header") %>

<link rel="stylesheet" type="text/css" href="/css/loginpage.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Login
                </div>

                <div class="card-body">
                    <form action="/authenticate" method="post">
                        <div class="mb-3">
                            <input type="text" class="form-un" id="email" name="email" required placeholder="Email">
                        </div>

                        <div class="mb-3">
                            <input type="password" class="form-pass" id="password" name="password" required placeholder="Password">
                        </div>

                        <button type="submit" class="btn btn-primary">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../shared/_footer") %>